{
  "version": 2,
  "name": "portfolio-website",
  "builds": [
    {
      "src": "portfolio/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "portfolio/wsgi.py"
    }
  ],

  "functions": {
    "api": {
      "runtime": "python3.9", 
      "includeFiles": ["requirements_prod.txt"]
    }
  }
}