{
  "version": 2,
  "name": "portfolio-website",
  "builds": [
    {
      "src": "portfolio/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build_vercel"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "portfolio/wsgi.py"
    }
  ]
}